<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.hospital.controllers.PatientDashboardController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab text="Personal Information">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    
                    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="firstNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="lastNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="dobLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label fx:id="genderLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label fx:id="contactLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <Label fx:id="addressLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>
            </VBox>
        </Tab>
        
        <Tab text="Medical History">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <TextArea fx:id="medicalHistoryArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
            </VBox>
        </Tab>
        
        <Tab text="Request Treatment">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <Label text="Request New Treatment" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    
                    <Label text="Symptoms:" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.valignment="TOP"/>
                    <TextArea fx:id="symptomsArea" promptText="Describe your symptoms..." 
                              wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Preferred Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <DatePicker fx:id="preferredDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Urgency Level:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="urgencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
                
                <HBox alignment="CENTER" spacing="10">
                    <Button text="Submit Request" onAction="#handleTreatmentRequest" 
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                </HBox>
                
                <Label fx:id="treatmentMessageLabel" style="-fx-font-size: 14px;"/>
            </VBox>
        </Tab>
    </TabPane>
    
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Logout" onAction="#handleLogout" 
                style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>
</VBox> 