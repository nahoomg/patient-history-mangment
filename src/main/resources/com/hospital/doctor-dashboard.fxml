<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.hospital.controllers.DoctorDashboardController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <!-- Dashboard Tab -->
        <Tab text="Dashboard">
            <VBox spacing="20">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <HBox spacing="20" alignment="CENTER">
                    <!-- Assigned Patients Stats Card -->
                    <VBox styleClass="stat-card" style="-fx-background-color: #E3F2FD; -fx-padding: 15; -fx-background-radius: 5;">
                        <Label text="Assigned Patients" style="-fx-font-size: 16px;"/>
                        <Label fx:id="assignedPatientsLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <!-- Pending Treatments Stats Card -->
                    <VBox styleClass="stat-card" style="-fx-background-color: #E8F5E9; -fx-padding: 15; -fx-background-radius: 5;">
                        <Label text="Pending Treatments" style="-fx-font-size: 16px;"/>
                        <Label fx:id="pendingTreatmentsLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <!-- Completed Treatments Stats Card -->
                    <VBox styleClass="stat-card" style="-fx-background-color: #FFF3E0; -fx-padding: 15; -fx-background-radius: 5;">
                        <Label text="Completed Treatments" style="-fx-font-size: 16px;"/>
                        <Label fx:id="completedTreatmentsLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
                
                <!-- Charts -->
                <HBox spacing="20" VBox.vgrow="ALWAYS">
                    <!-- Treatment Status Distribution -->
                    <PieChart fx:id="treatmentStatusChart" title="Treatment Status Distribution" 
                              legendVisible="true" labelsVisible="true" HBox.hgrow="ALWAYS"/>
                    
                    <!-- Treatment Urgency Distribution -->
                    <BarChart fx:id="treatmentUrgencyChart" title="Treatment Requests by Urgency" 
                              legendVisible="true" HBox.hgrow="ALWAYS">
                        <xAxis>
                            <CategoryAxis label="Urgency Level"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Number of Requests"/>
                        </yAxis>
                    </BarChart>
                </HBox>
            </VBox>
        </Tab>
        
        <!-- Assigned Patients Tab -->
        <Tab text="Assigned Patients">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ComboBox fx:id="statusFilterComboBox" promptText="Filter by status"/>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="Refresh" onAction="#handleRefreshAssignments" 
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                </HBox>
                
                <TableView fx:id="assignedPatientsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="treatmentIdColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="patientNameColumn" text="Patient Name" prefWidth="150"/>
                        <TableColumn fx:id="dateRequestedColumn" text="Date Requested" prefWidth="120"/>
                        <TableColumn fx:id="preferredDateColumn" text="Preferred Date" prefWidth="120"/>
                        <TableColumn fx:id="urgencyColumn" text="Urgency" prefWidth="100"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    </columns>
                </TableView>
                
                <VBox fx:id="treatmentDetailsPane" spacing="10" style="-fx-background-color: #F5F5F5; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Treatment Details" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    
                    <GridPane hgap="10" vgap="10">
                        <Label text="Patient:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="selectedPatientLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="Symptoms:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="TOP"/>
                        <TextArea fx:id="symptomsTextArea" editable="false" wrapText="true" 
                                  GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="100"/>
                        
                        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="treatmentStatusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="TOP"/>
                        <TextArea fx:id="treatmentNotesArea" wrapText="true" 
                                  GridPane.columnIndex="1" GridPane.rowIndex="3" prefHeight="100"/>
                    </GridPane>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button text="Update Treatment" onAction="#handleUpdateTreatment" 
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>
            </VBox>
        </Tab>
        
        <!-- Profile Tab -->
        <Tab text="Profile">
            <VBox spacing="15" alignment="CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <GridPane hgap="10" vgap="10" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="150" />
                        <ColumnConstraints minWidth="200" prefWidth="250" />
                    </columnConstraints>
                    
                    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="firstNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="lastNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Specialization:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="specializationLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label fx:id="contactNumberLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>
            </VBox>
        </Tab>
    </TabPane>
    
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Logout" onAction="#handleLogout" 
                style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>
</VBox> 