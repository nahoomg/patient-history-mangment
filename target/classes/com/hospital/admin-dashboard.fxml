<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.hospital.controllers.AdminDashboardController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <!-- Dashboard Tab -->
        <Tab text="Dashboard">
            <VBox spacing="20">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <HBox spacing="20" alignment="CENTER">
                    <!-- Patient Stats Card -->
                    <VBox styleClass="stat-card" style="-fx-background-color: #E3F2FD; -fx-padding: 15; -fx-background-radius: 5;">
                        <Label text="Total Patients" style="-fx-font-size: 16px;"/>
                        <Label fx:id="totalPatientsLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <!-- Doctor Stats Card -->
                    <VBox styleClass="stat-card" style="-fx-background-color: #E8F5E9; -fx-padding: 15; -fx-background-radius: 5;">
                        <Label text="Total Doctors" style="-fx-font-size: 16px;"/>
                        <Label fx:id="totalDoctorsLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <!-- Treatment Stats Card -->
                    <VBox styleClass="stat-card" style="-fx-background-color: #FFF3E0; -fx-padding: 15; -fx-background-radius: 5;">
                        <Label text="Pending Treatments" style="-fx-font-size: 16px;"/>
                        <Label fx:id="pendingTreatmentsLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
                
                <!-- Charts -->
                <HBox spacing="20" VBox.vgrow="ALWAYS">
                    <!-- Patient Gender Distribution -->
                    <PieChart fx:id="genderDistributionChart" title="Patient Gender Distribution" 
                              legendVisible="true" labelsVisible="true" HBox.hgrow="ALWAYS"/>
                    
                    <!-- Treatment Requests by Urgency -->
                    <BarChart fx:id="treatmentUrgencyChart" title="Treatment Requests by Urgency" 
                              legendVisible="true" HBox.hgrow="ALWAYS">
                        <xAxis>
                            <CategoryAxis label="Urgency Level"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Number of Requests"/>
                        </yAxis>
                    </BarChart>
                </HBox>
            </VBox>
        </Tab>
        
        <!-- Treatment Requests Tab -->
        <Tab text="Treatment Requests">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Filter by urgency:" />
                    <ComboBox fx:id="urgencyFilterComboBox" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="Refresh" onAction="#handleRefreshTreatments" 
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                </HBox>
                
                <TableView fx:id="treatmentRequestsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="treatmentIdColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="patientNameColumn" text="Patient Name" prefWidth="150"/>
                        <TableColumn fx:id="dateRequestedColumn" text="Date Requested" prefWidth="120"/>
                        <TableColumn fx:id="preferredDateColumn" text="Preferred Date" prefWidth="120"/>
                        <TableColumn fx:id="urgencyColumn" text="Urgency" prefWidth="100"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="assignedDoctorColumn" text="Assigned Doctor" prefWidth="150"/>
                    </columns>
                </TableView>
                
                <VBox fx:id="treatmentDetailsPane" spacing="10" style="-fx-background-color: #F5F5F5; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Treatment Details" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    
                    <GridPane hgap="10" vgap="10">
                        <Label text="Patient:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="selectedPatientLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="Symptoms:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="TOP"/>
                        <TextArea fx:id="symptomsTextArea" editable="false" wrapText="true" 
                                  GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="100"/>
                        
                        <Label text="Assign Doctor:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="doctorAssignmentComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button text="Save Assignment" onAction="#handleSaveAssignment" 
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>
            </VBox>
        </Tab>
        
        <!-- User Management Tab -->
        <Tab text="User Management">
            <TabPane tabClosingPolicy="UNAVAILABLE">
                <!-- Doctor Management Sub-Tab -->
                <Tab text="Manage Doctors">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button text="Add New Doctor" onAction="#handleShowAddDoctorForm" 
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                            <Region HBox.hgrow="ALWAYS" />
                            <TextField fx:id="doctorSearchField" promptText="Search doctors..." prefWidth="200"/>
                            <Button text="Search" onAction="#handleDoctorSearch"/>
                        </HBox>
                        
                        <TableView fx:id="doctorsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="doctorIdColumn" text="ID" prefWidth="50"/>
                                <TableColumn fx:id="doctorFirstNameColumn" text="First Name" prefWidth="100"/>
                                <TableColumn fx:id="doctorLastNameColumn" text="Last Name" prefWidth="100"/>
                                <TableColumn fx:id="doctorSpecializationColumn" text="Specialization" prefWidth="150"/>
                                <TableColumn fx:id="doctorContactColumn" text="Contact" prefWidth="120"/>
                                <TableColumn fx:id="doctorEmailColumn" text="Email" prefWidth="150"/>
                                <TableColumn fx:id="doctorUsernameColumn" text="Username" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>
                
                <!-- Admin Management Sub-Tab -->
                <Tab text="Manage Admins">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button text="Add New Admin" onAction="#handleShowAddAdminForm" 
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                        </HBox>
                        
                        <TableView fx:id="adminsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="adminIdColumn" text="ID" prefWidth="50"/>
                                <TableColumn fx:id="adminFullNameColumn" text="Full Name" prefWidth="150"/>
                                <TableColumn fx:id="adminEmailColumn" text="Email" prefWidth="200"/>
                                <TableColumn fx:id="adminUsernameColumn" text="Username" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>
                
                <!-- Patient Management Sub-Tab -->
                <Tab text="Manage Patients">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <TextField fx:id="patientSearchField" promptText="Search patients..." prefWidth="200"/>
                            <Button text="Search" onAction="#handlePatientSearch"/>
                        </HBox>
                        
                        <TableView fx:id="patientsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="patientIdColumn" text="ID" prefWidth="50"/>
                                <TableColumn fx:id="patientFirstNameColumn" text="First Name" prefWidth="100"/>
                                <TableColumn fx:id="patientLastNameColumn" text="Last Name" prefWidth="100"/>
                                <TableColumn fx:id="patientDobColumn" text="Date of Birth" prefWidth="120"/>
                                <TableColumn fx:id="patientGenderColumn" text="Gender" prefWidth="80"/>
                                <TableColumn fx:id="patientContactColumn" text="Contact" prefWidth="120"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>
            </TabPane>
        </Tab>
    </TabPane>
    
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Logout" onAction="#handleLogout" 
                style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>
</VBox> 