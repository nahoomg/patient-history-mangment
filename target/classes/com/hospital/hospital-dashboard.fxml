<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hospital.controllers.HospitalDashboardController" stylesheets="@styles.css">
    <top>
        <HBox styleClass="top-bar">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            
            <Label text="Hospital Dashboard" styleClass="dashboard-title"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="hospitalNameLabel" styleClass="user-name"/>
                <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
            </HBox>
        </HBox>
    </top>
    
    <left>
        <VBox styleClass="sidebar">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>
            
            <Label text="Menu" styleClass="sidebar-header"/>
            
            <Button text="Dashboard" onAction="#showDashboard" styleClass="sidebar-button, active-sidebar-button"/>
            <Button text="Doctors" onAction="#showDoctors" styleClass="sidebar-button"/>
            <Button text="Patients" onAction="#showPatients" styleClass="sidebar-button"/>
            <Button text="Facilities" onAction="#showFacilities" styleClass="sidebar-button"/>
            <Button text="Services" onAction="#showServices" styleClass="sidebar-button"/>
            <Button text="Profile" onAction="#showProfile" styleClass="sidebar-button"/>
        </VBox>
    </left>
    
    <center>
        <StackPane>
            <VBox fx:id="dashboardContent" spacing="20" styleClass="content-area">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>
                
                <Label text="Hospital Overview" styleClass="section-title"/>
                
                <HBox spacing="20">
                    <VBox styleClass="stat-card">
                        <Label text="Total Doctors" styleClass="stat-title"/>
                        <Label fx:id="totalDoctorsLabel" text="0" styleClass="stat-value"/>
                    </VBox>
                    
                    <VBox styleClass="stat-card">
                        <Label text="Total Patients" styleClass="stat-title"/>
                        <Label fx:id="totalPatientsLabel" text="0" styleClass="stat-value"/>
                    </VBox>
                    
                    <VBox styleClass="stat-card">
                        <Label text="Services Offered" styleClass="stat-title"/>
                        <Label fx:id="servicesLabel" text="0" styleClass="stat-value"/>
                    </VBox>
                </HBox>
                
                <Label text="Hospital Information" styleClass="section-title"/>
                
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" maxWidth="150"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200"/>
                    </columnConstraints>
                    
                    <Label text="Hospital Name:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="nameValueLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Address:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="addressValueLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Contact:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="contactValueLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Email:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label fx:id="emailValueLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Website:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label fx:id="websiteValueLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>
                
                <Label text="Hospital Description" styleClass="section-title"/>
                <TextArea fx:id="descriptionTextArea" wrapText="true" editable="false" prefRowCount="5" styleClass="description-area"/>
                
                <HBox alignment="CENTER">
                    <Button text="Edit Hospital Information" onAction="#handleEditInfo" styleClass="primary-button"/>
                </HBox>
            </VBox>
            
            <VBox fx:id="doctorsContent" spacing="20" styleClass="content-area" visible="false">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>
                <Label text="Manage Hospital Doctors" styleClass="section-title"/>
                <Text text="This section will allow you to manage doctors associated with your hospital." styleClass="placeholder-text"/>
                <Button text="Add New Doctor" onAction="#handleAddDoctor" styleClass="primary-button"/>
            </VBox>
            
            <VBox fx:id="patientsContent" spacing="20" styleClass="content-area" visible="false">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>
                <Label text="Manage Hospital Patients" styleClass="section-title"/>
                <Text text="This section will allow you to view and manage patients in your hospital." styleClass="placeholder-text"/>
            </VBox>
            
            <VBox fx:id="facilitiesContent" spacing="20" styleClass="content-area" visible="false">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>
                <Label text="Manage Hospital Facilities" styleClass="section-title"/>
                <Text text="This section will allow you to manage your hospital's facilities." styleClass="placeholder-text"/>
                <Button text="Add New Facility" onAction="#handleAddFacility" styleClass="primary-button"/>
            </VBox>
            
            <VBox fx:id="servicesContent" spacing="20" styleClass="content-area" visible="false">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>
                <Label text="Manage Hospital Services" styleClass="section-title"/>
                <Text text="This section will allow you to manage the services your hospital offers." styleClass="placeholder-text"/>
                <Button text="Add New Service" onAction="#handleAddService" styleClass="primary-button"/>
            </VBox>
            
            <VBox fx:id="profileContent" spacing="20" styleClass="content-area" visible="false">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>
                <Label text="Hospital Profile" styleClass="section-title"/>
                <Text text="This section will allow you to update your hospital's profile information." styleClass="placeholder-text"/>
                <Button text="Change Password" onAction="#handleChangePassword" styleClass="primary-button"/>
            </VBox>
        </StackPane>
    </center>
    
    <bottom>
        <HBox styleClass="footer">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Â© 2023 City Hospital Management System" styleClass="footer-text"/>
        </HBox>
    </bottom>
</BorderPane> 